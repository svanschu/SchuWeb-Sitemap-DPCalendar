	<updateservers>
        <server type="extension" priority="1" name="SchuWeb Sitemap - DPCalendar Integration">
            https://raw.githubusercontent.com/svanschu/SchuWeb-Sitemap-DPCalendar/main/update.xml
        </server>
    </updateservers>
    <changelogurl>https://raw.githubusercontent.com/svanschu/SchuWeb-Sitemap-DPCalendar/main/changelog.xml</changelogurl>
	<scriptfile>script.php</scriptfile>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="expand_calendars" type="list" default="1" label="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_EXPAND_CALENDARS"
				       description="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_EXPAND_CALENDARS_DESC">
					<option value="0">SCHUWEB_SITEMAP_OPTION_NEVER</option>
					<option value="1">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
					<option value="2">SCHUWEB_SITEMAP_OPTION_XML_ONLY</option>
					<option value="3">SCHUWEB_SITEMAP_OPTION_HTML_ONLY</option>
				</field>
			</fieldset>
			<fieldset name="xml">
				<field name="calendar_priority" type="list" default="-1" label="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_CALENDAR_PRIORITY"
				       description="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_CALENDAR_PRIORITY_DESC">
					<option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
					<option value="1">1</option>
				</field>
				<field name="calendar_changefreq" type="list" default="-1" label="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_CALENDAR_CHANCE_FREQ"
				       description="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_CALENDAR_CHANCE_FREQ_DESC">
					<option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
					<option value="always">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
					<option value="hourly">SCHUWEB_SITEMAP_OPTION_HOURLY</option>
					<option value="daily">SCHUWEB_SITEMAP_OPTION_DAILY</option>
					<option value="weekly">SCHUWEB_SITEMAP_OPTION_WEEKLY</option>
					<option value="monthly">SCHUWEB_SITEMAP_OPTION_MONTHLY</option>
					<option value="yearly">SCHUWEB_SITEMAP_OPTION_YEARLY</option>
					<option value="never">SCHUWEB_SITEMAP_OPTION_NEVER</option>
				</field>

				<field name="event_priority" type="list" default="-1" label="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_EVENT_PRIORITY"
				       description="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_EVENT_PRIORITY_DESC">
					<option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
					<option value="0.0">0.0</option>
					<option value="0.1">0.1</option>
					<option value="0.2">0.2</option>
					<option value="0.3">0.3</option>
					<option value="0.4">0.4</option>
					<option value="0.5">0.5</option>
					<option value="0.6">0.6</option>
					<option value="0.7">0.7</option>
					<option value="0.8">0.8</option>
					<option value="0.9">0.9</option>
