					<option value="-1">SCHUWEB_SITEMAP_OPTION_USE_PARENT_MENU</option>
					<option value="always">SCHUWEB_SITEMAP_OPTION_ALWAYS</option>
					<option value="hourly">SCHUWEB_SITEMAP_OPTION_HOURLY</option>
					<option value="daily">SCHUWEB_SITEMAP_OPTION_DAILY</option>
					<option value="weekly">SCHUWEB_SITEMAP_OPTION_WEEKLY</option>
					<option value="monthly">SCHUWEB_SITEMAP_OPTION_MONTHLY</option>
					<option value="yearly">SCHUWEB_SITEMAP_OPTION_YEARLY</option>
					<option value="never">SCHUWEB_SITEMAP_OPTION_NEVER</option>
				</field>
			</fieldset>
			<fieldset name="news">
				<field name="keywords" type="list" default="1" label="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_NEWS_KEYWORDS_LABEL"
				       description="PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_NEWS_KEYWORDS_DESC">
					<option value="metakey">PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_NEWS_KEYWORDS_METAKEYS</option>
					<option value="calendar">PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_NEWS_KEYWORDS_CALENDARTITLE</option>
					<option value="both">PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_NEWS_KEYWORDS_METAKEYS_CALENDARTITLE</option>
					<option value="none">PLG_SCHUWEB_SITEMAP_DPCALENDAR_SETTING_NEWS_KEYWORDS_NONE</option>
				</field>
